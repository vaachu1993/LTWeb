@model List<WebTH.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <!-- Banner -->
    <div class="banner mb-4">
        <img src="/images/thang_03_laptop_gamingld_pc.webp" class="img-fluid rounded" alt="Banner">
    </div>

    <h3 class="mb-3">Sản phẩm mới</h3>

    <div class="row">
        <!-- Sidebar Danh mục -->
        <aside class="col-md-3">
            <h4 class="mb-3">Danh mục sản phẩm</h4>
            <ul class="list-group">
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in ViewBag.Categories)
                    {
                        <li class="list-group-item">
                            <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id">
                                @category.Name
                            </a>
                        </li>
                    }
                }
            </ul>
        </aside>

        <!-- Danh sách sản phẩm -->
        <section class="col-md-9">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body text-center">
                                <h6 class="card-title">@product.Name</h6>
                                <p class="text-muted">
                                    <del>5.000.000đ</del>
                                    <span class="text-danger">@product.Price.ToString("N0")đ</span>
                                </p>
                                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id"
                                   class="btn btn-primary btn-sm w-100">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>
