@model WebTH.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="row">
        <!-- Ảnh sản phẩm -->
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name">
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>

            <p class="text-muted">
                <del>5.000.000đ</del>
                <span class="text-danger fw-bold">@Model.Price.ToString("N0")đ</span>
            </p>

            <p><strong>Mô tả:</strong> @Model.Description</p>

            <div class="mt-4">
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id"
                   class="btn btn-success btn-lg">
                    <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                </a>

                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
