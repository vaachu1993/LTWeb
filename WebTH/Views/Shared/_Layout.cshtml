<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebTH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap & Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            background-color: #D80000; /* Màu đỏ GEARVN */
            padding: 10px 0;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 22px;
            color: white !important;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 40px;
                margin-right: 10px;
            }

        /* Nút danh mục */
        .category-btn {
            background: white;
            color: black;
            border-radius: 5px;
            padding: 8px 15px;
            display: flex;
            align-items: center;
            font-size: 16px;
            font-weight: bold;
        }

            .category-btn i {
                margin-right: 8px;
            }

        /* Thanh tìm kiếm */
        .search-bar {
            width: 35%; /* Giảm chiều rộng */
            max-width: 400px; /* Giới hạn kích thước tối đa */
            display: flex;
            align-items: center;
            background: white;
            border-radius: 20px;
            padding: 3px 8px; /* Giảm padding để làm nhỏ hơn */
            height: 35px; /* Giảm chiều cao */
        }

            .search-bar input {
                border: none;
                outline: none;
                width: 100%;
                padding: 5px;
                font-size: 14px; /* Giảm kích thước chữ */
            }

            .search-bar button i {
                font-size: 14px; /* Giảm kích thước icon tìm kiếm */
            }

        /* Mục Hotline, Giỏ hàng, Đăng nhập */
        .nav-icons a {
            color: white;
            font-size: 14px;
            margin-left: 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

        .nav-icons i {
            font-size: 20px;
            margin-right: 5px;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo + Danh mục -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/images.jpg" alt="Logo">
                        GearVN
                    </a>
                </div>

                <!-- Thanh tìm kiếm -->
                <div class="search-bar">
                    <button><i class="fas fa-search"></i></button>
                    <input type="text" placeholder="Bạn cần tìm gì?" />
                </div>

                <!-- Hotline, Showroom, Giỏ hàng, Đăng nhập -->
                <div class="nav-icons d-flex">
                    <a asp-area="" asp-controller="Product" asp-action="Add">
                         Thêm Sản Phẩm
                    </a>
                    <a asp-area="" asp-controller="Product" asp-action="Index">
                         Sản Phẩm
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 bg-light">
        <div class="container">
            <div class="row">
                <!-- Cột 1: Về chúng tôi -->
                <div class="col-md-3">
                    <h6 class="fw-bold">VỀ WEBBANHANG</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>

                <!-- Cột 2: Chính sách -->
                <div class="col-md-3">
                    <h6 class="fw-bold">CHÍNH SÁCH</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Chính sách bảo hành</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Thông tin -->
                <div class="col-md-3">
                    <h6 class="fw-bold">THÔNG TIN</h6>
                    <ul class="list-unstyled">
                        <li><a href="#">Hệ thống cửa hàng</a></li>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                        <li><a href="#">Hướng dẫn trả góp</a></li>
                        <li><a href="#">Tra cứu địa chỉ bảo hành</a></li>
                    </ul>
                </div>

                <!-- Cột 4: Tổng đài hỗ trợ -->
                <div class="col-md-3">
                    <h6 class="fw-bold">TỔNG ĐÀI HỖ TRỢ (8:00 - 21:00)</h6>
                    <ul class="list-unstyled">
                        <li>Mua hàng: <a href="tel:19005301" class="text-primary">1900.5301</a></li>
                        <li>Bảo hành: <a href="tel:19005325" class="text-primary">1900.5325</a></li>
                        <li>Khiếu nại: <a href="tel:18006173" class="text-primary">1800.6173</a></li>
                        <li>Email: <a href="mailto:cskh@webbanhang.com" class="text-primary">cskh@webbanhang.com</a></li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center mt-3">
                &copy; 2025 - WebBanHang. All Rights Reserved.
            </div>
        </div>
    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
